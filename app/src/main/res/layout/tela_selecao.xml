<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.planetasoft.gerenciadordevendaseestoque.telaselecao">

    <ImageButton
        android:id="@+id/ibtnLg"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/lg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:contentDescription="@null"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/ibtnSamsung"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/samsung"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toRightOf="@+id/ibtnMotorola"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageButton
        android:id="@+id/ibtnMotorola"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/motorola"
        app:layout_constraintLeft_toRightOf="@+id/ibtnLg"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" />

    <ImageButton
        android:id="@+id/ibtnApple"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/apple"
        app:layout_constraintLeft_toRightOf="@+id/ibtnNokia"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/ibtnSamsung"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/ibtnSony"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibtnLg"
        app:srcCompat="@drawable/sony" />

    <ImageButton
        android:id="@+id/ibtnNokia"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/nokia"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/ibtnMotorola"
        app:layout_constraintLeft_toRightOf="@+id/ibtnSony"
        android:layout_marginLeft="24dp" />

    <ImageButton
        android:id="@+id/ibtnMicrosoft"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibtnSony"
        app:srcCompat="@drawable/microsoft"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        app:layout_constraintVertical_bias="0.511" />

    <ImageButton
        android:id="@+id/ibtnLenovo"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toRightOf="@+id/ibtnMicrosoft"
        app:layout_constraintTop_toBottomOf="@+id/ibtnNokia"
        app:srcCompat="@drawable/lenovo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        app:layout_constraintVertical_bias="0.511" />

    <ImageButton
        android:id="@+id/ibtnTablet"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="39dp"
        app:layout_constraintLeft_toRightOf="@+id/ibtnLenovo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibtnApple"
        app:srcCompat="@drawable/tablet"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:text="Voltar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibtnTablet"
        app:layout_constraintVertical_bias="0.307" />
</android.support.constraint.ConstraintLayout>
